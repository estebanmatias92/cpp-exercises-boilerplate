{
	// Editor
	"editor.defaultFormatter": "ms-vscode.cpptools",
	"editor.formatOnSave": true,

	// Language/Files specific settings
	"[dockercompose]": {
		"editor.defaultFormatter": "ms-azuretools.vscode-docker"
	},

	// Extensions
	//"makefile.extensionOutputFolder": "./.vscode",
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,

	// Cmake
	"cmake.autoSelectActiveFolder": false,
	"cmake.sourceDirectory": "${workspaceFolder}",
	"cmake.buildDirectory": "${workspaceFolder}/build",
	"cmake.configureOnOpen": true,
	"files.associations": {
		"string": "cpp",
		"cctype": "cpp",
		"clocale": "cpp",
		"cmath": "cpp",
		"cstdarg": "cpp",
		"cstddef": "cpp",
		"cstdio": "cpp",
		"cstdlib": "cpp",
		"cwchar": "cpp",
		"cwctype": "cpp",
		"array": "cpp",
		"atomic": "cpp",
		"bit": "cpp",
		"*.tcc": "cpp",
		"compare": "cpp",
		"concepts": "cpp",
		"cstdint": "cpp",
		"deque": "cpp",
		"unordered_map": "cpp",
		"vector": "cpp",
		"exception": "cpp",
		"algorithm": "cpp",
		"functional": "cpp",
		"iterator": "cpp",
		"memory": "cpp",
		"memory_resource": "cpp",
		"numeric": "cpp",
		"optional": "cpp",
		"random": "cpp",
		"string_view": "cpp",
		"system_error": "cpp",
		"tuple": "cpp",
		"type_traits": "cpp",
		"utility": "cpp",
		"initializer_list": "cpp",
		"iosfwd": "cpp",
		"iostream": "cpp",
		"istream": "cpp",
		"limits": "cpp",
		"new": "cpp",
		"numbers": "cpp",
		"ostream": "cpp",
		"ranges": "cpp",
		"stdexcept": "cpp",
		"streambuf": "cpp",
		"typeinfo": "cpp",
		"cstring": "cpp",
		"bitset": "cpp",
		"complex": "cpp",
		"list": "cpp",
		"map": "cpp",
		"set": "cpp",
		"sstream": "cpp",
		"cinttypes": "cpp",
		"typeindex": "cpp",
		"variant": "cpp"
	},

	// Linters
	"c-cpp-flylint.enable": false,
	"c-cpp-flylint.cppcheck.enable": true,
	"C_Cpp.errorSquiggles": "enabled",
}